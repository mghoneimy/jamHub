    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:id="@+id/record_button_stop"
        android:background="@android:color/holo_orange_dark"
        android:layout_alignTop="@+id/record_button_record"
