<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.Example.iJam" >

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAPTURE_AUDIO_OUTPUT" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/jamhublogo3"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/title_activity_main"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.MainTrackDetailActivity"
            android:label="Track Details"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.SignInActivity"
            android:label="Jam Hub"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.SignUpActivity"
            android:label="@string/title_activity_signup"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.UploadTrackActivity"
            android:label="@string/title_activity_recordtrack"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.RecordActivity"
            android:label="@string/title_activity_record"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.JammingActivity"
            android:label="@string/title_activity_jamming"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.MyTracksActivity"
            android:label="@string/title_activity_my_tracks"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.EdittProfileActivity"
            android:label="@string/title_activity_editt_profile"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.AboutUsActivity"
            android:label="@string/title_activity_about_us"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>
